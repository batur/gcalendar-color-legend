{
  "manifest_version": 3,
  "name": "Calendar Color Legend",
  "version": "1.0.0",
  "description": "Add custom names to Google Calendar event colors as a personal legend/index",
  "permissions": ["storage"],
  "host_permissions": ["https://calendar.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
